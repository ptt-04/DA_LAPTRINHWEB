@model int

<div class="container mt-5">
    <div class="card">
        <div class="card-body text-center">
            @if (TempData["PaymentSuccess"] != null && (bool)TempData["PaymentSuccess"])
            {
                <i class="fas fa-check-circle text-success" style="font-size: 48px;"></i>
                <h2 class="mt-3">Thanh toán thành công!</h2>
                <p class="lead">@TempData["PaymentMessage"]</p>
            }
            else
            {
                <h2>Đơn hàng #@Model đã được đặt thành công</h2>
                <p class="lead">Cảm ơn bạn đã mua hàng!</p>
            }
            
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
} 