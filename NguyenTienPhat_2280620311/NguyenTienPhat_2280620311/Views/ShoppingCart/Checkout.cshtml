@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function() {
            var currentDiscount = 0;
            var total = @total;

            function formatCurrency(amount) {
                return amount.toLocaleString('vi-VN') + ' ₫';
            }

            function updatePrices(couponCode) {
                $('#discountAmount').text('-' + formatCurrency(currentDiscount));
                $('#finalPrice').text(formatCurrency(total - currentDiscount));
                $('#discountAmountInput').val(currentDiscount);
                $('#couponCodeInput').val(couponCode);
            }

            $('#applyCoupon').click(function() {
                var couponCode = $('#couponCode').val();
                if (!couponCode) {
                    alert('Vui lòng nhập mã giảm giá!');
                    return;
                }

                $.ajax({
                    url: '/ShoppingCart/ApplyCoupon',
                    type: 'POST',
                    data: { code: couponCode },
                    success: function(response) {
                        if (response.success) {
                            if (response.discountType === 0) { // FixedAmount
                                currentDiscount = response.discountAmount;
                            } else { // Percentage
                                currentDiscount = (total * response.discountAmount) / 100;
                            }
                            updatePrices(couponCode);
                            alert('Áp dụng mã giảm giá thành công!');
                        } else {
                            alert(response.message);
                            // Reset mã giảm giá nếu không thành công
                            currentDiscount = 0;
                            updatePrices('');
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra, vui lòng thử lại sau!');
                        // Reset mã giảm giá nếu có lỗi
                        currentDiscount = 0;
                        updatePrices('');
                    }
                });
            });

            $('input[name="paymentMethod"]').change(function() {
                if ($(this).val() === 'vnpay') {
                    $('#codSubmit').hide();
                    $('#vnpaySubmit').fadeIn();
                } else {
                    $('#vnpaySubmit').hide();
                    $('#codSubmit').fadeIn();
                }
            });

            $('#vnpaySubmit').click(function() {
                var form = $('#checkoutForm');
                if (!form[0].checkValidity()) {
                    form[0].reportValidity();
                    return;
                }
                
                form.attr('action', '@Url.Action("CreatePaymentUrlVnpay", "Payment")');
                form.submit();
            });

            $('#checkoutForm').submit(function(e) {
                if ($('input[name="paymentMethod"]:checked').val() === 'cod') {
                    $(this).attr('action', '@Url.Action("Checkout", "ShoppingCart")');
                }
            });

            //Lấy tỉnh thành
            $.getJSON('https://esgoo.net/api-tinhthanh/1/0.htm',function(data_tinh){	       
                if(data_tinh.error==0){
                   $.each(data_tinh.data, function (key_tinh,val_tinh) {
                      $("#tinh").append('<option value="'+val_tinh.id+'">'+val_tinh.full_name+'</option>');
                   });
                   $("#tinh").change(function(e){
                        var idtinh=$(this).val();
                        //Lấy quận huyện
                        $.getJSON('https://esgoo.net/api-tinhthanh/2/'+idtinh+'.htm',function(data_quan){	       
                            if(data_quan.error==0){
                               $("#quan").html('<option value="0">Quận Huyện</option>');  
                               $("#phuong").html('<option value="0">Phường Xã</option>');   
                               $.each(data_quan.data, function (key_quan,val_quan) {
                                  $("#quan").append('<option value="'+val_quan.id+'">'+val_quan.full_name+'</option>');
                               });
                               //Lấy phường xã  
                               $("#quan").change(function(e){
                                    var idquan=$(this).val();
                                    $.getJSON('https://esgoo.net/api-tinhthanh/3/'+idquan+'.htm',function(data_phuong){	       
                                        if(data_phuong.error==0){
                                           $("#phuong").html('<option value="0">Phường Xã</option>');   
                                           $.each(data_phuong.data, function (key_phuong,val_phuong) {
                                              $("#phuong").append('<option value="'+val_phuong.id+'">'+val_phuong.full_name+'</option>');
                                           });
                                        }
                                    });
                               });
                                
                            }
                        });
                   });   
                
                }
            });

            $('#couponSelect').change(function() {
                var code = $(this).val();
                $('#couponCode').val(code);
            });

            // Chọn mã giảm giá bằng click thẻ
            $('.coupon-card').click(function() {
                var code = $(this).data('code');
                $('#couponCode').val(code);
                $('#couponSelect').val(code);
                $('.coupon-card').removeClass('selected');
                $(this).addClass('selected');

                // Lấy thông tin chi tiết mã giảm giá từ ViewBag.Coupons
                var coupons = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Coupons));
                var coupon = coupons.find(c => c.Code === code);
                if (coupon) {
                    var html = `<ul class='list-unstyled mb-0'>
                        <li><b>Mã:</b> ${coupon.Code}</li>
                        <li><b>Tên:</b> ${coupon.Name}</li>
                        <li><b>Loại:</b> ${coupon.DiscountType === 0 ? 'Giảm cố định' : 'Giảm phần trăm'}</li>
                        <li><b>Giá trị:</b> ${coupon.DiscountType === 0 ? coupon.DiscountAmount.toLocaleString('vi-VN') + '₫' : coupon.DiscountAmount + '%'}</li>
                        <li><b>Còn lại:</b> ${coupon.Quantity}</li>
                        <li><b>Đơn tối thiểu:</b> ${coupon.MinimumSpend.toLocaleString('vi-VN')}₫</li>
                        <li><b>HSD:</b> ${new Date(coupon.EndDate).toLocaleDateString('vi-VN')}</li>
                        <li><b>Mô tả:</b> ${coupon.Description || ''}</li>
                    </ul>`;
                    $('#couponDetailBody').html(html);
                    var modal = new bootstrap.Modal(document.getElementById('couponDetailModal'));
                    modal.show();
                }
            });
         });    
    </script>
}
