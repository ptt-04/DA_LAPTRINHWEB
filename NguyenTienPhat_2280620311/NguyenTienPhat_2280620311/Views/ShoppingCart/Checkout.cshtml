@model Order
<script src="https://esgoo.net/scripts/jquery.js"></script>
<style type="text/css">
    .css_select_div{ text-align: center;}
    .css_select{ display: inline-table; width: 25%; padding: 5px; margin: 5px 2%; border: solid 1px #d32f2f; border-radius: 5px; background: #fff; color: #222;}
    .css_select:focus { border-color: #b71c1c; outline: none; }
    .promotion-bar {
        background: #fffbe6;
        border-radius: 10px;
        padding: 12px 14px 8px 14px;
        box-shadow: 0 2px 8px rgba(255,193,7,0.08);
        margin-bottom: 8px;
    }
    .promo-item {
        font-weight: 500;
        font-size: 1rem;
        border: 1.5px solid #eee;
        background: #fff;
        transition: box-shadow 0.2s, border-color 0.2s;
    }
    .promo-yellow { border-color: #ffe082; background: #fffde7; color: #e6a700; }
    .promo-green { border-color: #b2f2bb; background: #e6ffed; color: #1b8f3b; }
    .promo-blue { border-color: #90caf9; background: #e3f2fd; color: #1976d2; }
    .promo-item i { font-size: 1.2rem; }
    .promo-item:hover, .promo-item.selected { box-shadow: 0 2px 8px rgba(0,0,0,0.08); border-color: #d32f2f; }
    .promo-text { font-size: 1rem; }
</style>
@using NguyenTienPhat_2280620311.Extensions

<div class="container mt-4" style="background: #fff; border-radius: 12px; box-shadow: 0 2px 10px rgba(211,47,47,0.08); padding-bottom: 32px;">
    <div class="row g-4">
        <div class="col-lg-6 mb-4">
            <div class="card mb-4" style="border: 1px solid #ffcdd2;">
                <div class="card-header" style="background: #d32f2f; color: #fff;">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body" style="color: #222;">
                    @{
                        var cartItems = ViewBag.CartItems as List<NguyenTienPhat_2280620311.Models.CartItemDb>;
                        var total = cartItems?.Sum(i => i.Product.Price * i.Quantity) ?? 0;
                    }
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (cartItems != null)
                                {
                                    foreach (var item in cartItems)
                                    {
                                        <tr>
                                            <td>@item.Product.Name</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end">@item.Product.Price.ToString("N0") ₫</td>
                                            <td class="text-end">@((item.Product.Price * item.Quantity).ToString("N0")) ₫</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Tổng cộng:</strong></td>
                                    <td class="text-end"><strong id="subtotal">@total.ToString("N0") ₫</strong></td>
                                </tr>
                                @if (ViewBag.Coupons != null && ViewBag.Coupons.Count > 0)
                                {
                                    <tr>
                                        <td colspan="4">
                                            <div class="promotion-bar mb-2">
                                                <div class="d-flex align-items-center mb-2">
                                                    <strong style="font-size:1.05rem;">Chọn mã giảm giá:</strong>
                                                </div>
                                                <div class="d-flex flex-wrap gap-2">
                                                    @foreach (var c in ViewBag.Coupons)
                                                    {
                                                        var icon = c.DiscountType == 0 ? "fa-percent" : "fa-truck";
                                                        var bg = c.DiscountType == 0 ? "promo-yellow" : "promo-green";
                                                        if (c.Name.ToLower().Contains("vpbank") || c.Name.ToLower().Contains("bank")) { icon = "fa-credit-card"; bg = "promo-blue"; }
                                                        <div class="promo-item @bg d-flex align-items-center px-3 py-2 rounded coupon-card" style="min-width:140px; cursor:pointer;" data-code="@c.Code">
                                                            <i class="fas @icon me-2"></i>
                                                            <span class="promo-text text-truncate" style="max-width:90px;">
                                                                @((c.Name.Length > 18) ? (c.Name.Substring(0, Math.Min(17, c.Name.Length)) + "...") : c.Name)
                                                            </span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="3" class="text-end">
                                        <div class="input-group" style="max-width: 300px; margin-left: auto;">
                                            <select id="couponSelect" class="form-select" style="max-width: 180px;">
                                                <option value="">-- Chọn mã giảm giá --</option>
                                                @if (ViewBag.Coupons != null)
                                                {
                                                    foreach (var c in ViewBag.Coupons)
                                                    {
                                                        <option value="@c.Code">
                                                            @c.Code - @c.Name (@(c.DiscountType == 0 ? ($"{c.DiscountAmount:N0}₫") : ($"{c.DiscountAmount:N1}%")))
                                                        </option>
                                                    }
                                                }
                                            </select>
                                            <input type="text" id="couponCode" class="form-control" placeholder="Nhập mã giảm giá">
                                            <button class="btn btn-outline-primary" type="button" id="applyCoupon">Áp dụng</button>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <span id="discountAmount" class="text-danger">0 ₫</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Thành tiền:</strong></td>
                                    <td class="text-end"><strong id="finalPrice">@total.ToString("N0") ₫</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card" style="border: 1px solid #ffcdd2;">
                <div class="card-header" style="background: #d32f2f; color: #fff;">
                    <h5 class="mb-0">Thông tin giao hàng</h5>
                </div>
                <div class="card-body" style="color: #222;">
                    <form id="checkoutForm" method="post">
                        <input type="hidden" id="discountAmountInput" name="discountAmount" value="0" />
                        <input type="hidden" id="couponCodeInput" name="couponCode" value="" />
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="PhoneNumber" class="form-control" required 
                                   value="@(User.Identity.IsAuthenticated ? ((NguyenTienPhat_2280620311.Models.ApplicationUser)ViewBag.CurrentUser)?.PhoneNumber : "")"
                                   placeholder="Nhập số điện thoại của bạn" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShippingAddress" class="form-label">Địa chỉ giao hàng</label>
                            <input asp-for="ShippingAddress" class="form-control" required />
                        </div>

                        <div class="mb-3 css_select_div">
                            <select class="css_select" id="tinh" name="City" title="Chọn Tỉnh Thành" required>
                                <option value="">Tỉnh Thành</option>
                            </select>
                            <select class="css_select" id="quan" name="District" title="Chọn Quận Huyện" required>
                                <option value="">Quận Huyện</option>
                            </select>
                            <select class="css_select" id="phuong" name="Ward" title="Chọn Phường Xã" required>
                                <option value="">Phường Xã</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Ghi chú</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Phương thức thanh toán</label>
                            <div class="payment-methods d-flex flex-row gap-2">
                                <div class="payment-method-item flex-fill">
                                    <input type="radio" class="btn-check" name="paymentMethod" id="cod" value="cod" checked>
                                    <label class="btn btn-outline-secondary w-100 text-start" for="cod">
                                        <i class="fas fa-money-bill-wave me-2"></i>
                                        Thanh toán khi nhận hàng (COD)
                                    </label>
                                </div>
                                <div class="payment-method-item flex-fill">
                                    <input type="radio" class="btn-check" name="paymentMethod" id="vnpay" value="vnpay">
                                    <label class="btn btn-outline-primary w-100 text-start" for="vnpay">
                                        <img src="https://sandbox.vnpayment.vn/paymentv2/Images/brands/logo.svg" alt="VNPay" height="24" class="me-2">
                                        Thanh toán qua VNPAY
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" id="codSubmit">
                                <i class="fas fa-shopping-cart me-2"></i>Đặt hàng COD
                            </button>
                            <button type="button" class="btn btn-primary btn-lg" id="vnpaySubmit" style="display: none; background-color: #0055AA;">
                                <i class="fas fa-credit-card me-2"></i>Thanh toán qua VNPAY
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="card" style="border: 1px solid #ffcdd2;">
                <div class="card-header" style="background: #d32f2f; color: #fff;">
                    <h5 class="mb-0">Hướng dẫn thanh toán</h5>
                </div>
                <div class="card-body" style="color: #222;">
                    <div class="payment-guide">
                        <h6 style="color: #d32f2f;">Thanh toán qua VNPAY:</h6>
                        <ol class="ps-3">
                            <li>Chọn phương thức "Thanh toán qua VNPAY"</li>
                            <li>Nhấn nút "Thanh toán qua VNPAY"</li>
                            <li>Quý khách sẽ được chuyển đến cổng thanh toán VNPAY</li>
                            <li>Thực hiện thanh toán theo hướng dẫn</li>
                        </ol>
                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Thanh toán an toàn qua cổng VNPAY
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["PaymentError"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["PaymentError"]
    </div>
}

<!-- Modal hiển thị chi tiết mã giảm giá -->
