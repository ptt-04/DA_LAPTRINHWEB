@model NguyenTienPhat_2280620311.Models.Vnpay.PaymentDetailModel

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header text-white py-3" style="background-color: #C92127;">
            <h3 class="text-center mb-0">Hóa đơn thanh toán</h3>
        </div>
        <div class="card-body py-5">
            <div class="row justify-content-center">
                <div class="col-md-8 text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle" style="font-size: 4rem; color: #F7941E;"></i>
                    </div>
                    
                    <h4 class="mb-4" style="color: #C92127;">Thanh toán thành công!</h4>
                    
                    <div class="payment-amount p-4 mb-4" style="background-color: #fff4eb; border: 2px solid #F7941E; border-radius: 10px;">
                        <h5 class="text-muted mb-3">Số tiền đã thanh toán</h5>
                        <h2 style="color: #C92127;">@Model.Amount.ToString("N0") VNĐ</h2>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-lg px-5" 
                           style="background-color: #F7941E; color: white; border: none;">
                            <i class="fas fa-home me-2"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f0f0f0;
        }
        .card {
            border: none;
            border-radius: 8px;
        }
        .card-header {
            border-top-left-radius: 8px !important;
            border-top-right-radius: 8px !important;
        }
        .btn-lg {
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 4px;
            transition: all 0.3s ease;
        }
        .btn-lg:hover {
            background-color: #C92127 !important;
            transform: translateY(-2px);
        }
        .payment-amount {
            transition: all 0.3s ease;
        }
        .payment-amount:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(247, 148, 30, 0.2);
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 