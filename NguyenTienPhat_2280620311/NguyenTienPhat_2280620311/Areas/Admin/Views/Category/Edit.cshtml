@model NguyenTienPhat_2280620311.Models.Category
@{
    ViewData["Title"] = "Sửa danh mục";
}
<h1 class="mt-4">Sửa danh mục sản phẩm</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="/Admin/Category">Category Management</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-edit me-1"></i> Sửa danh mục
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label class="form-label">Tên danh mục</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a href="/Admin/Category" class="btn btn-secondary ms-2">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div> 