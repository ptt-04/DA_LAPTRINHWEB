@model NguyenTienPhat_2280620311.Models.Product
@{
    ViewData["Title"] = "Xóa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-trash me-2"></i>Xác Nhận Xóa Sản Phẩm
                    </h3>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-4">Bạn có chắc chắn muốn xóa sản phẩm này?</h5>
                    <div class="product-info mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail mb-3" style="max-height: 150px;">
                        }
                        <h4 class="text-danger">@Model.Name</h4>
                        <p class="text-muted">Giá: @Model.Price.ToString("N0") đ</p>
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Hành động này không thể hoàn tác!
                    </div>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>