@page
@model NguyenTienPhat_2280620311.Areas.Identity.Pages.Account.VerifyModel
@{
    ViewData["Title"] = "Xác thực email";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">Xác thực email</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="verifyCode" name="verifyCode" placeholder="Nhập mã xác nhận" required />
                            <label for="verifyCode">Mã xác nhận đã gửi về email</label>
                        </div>
                        <button type="submit" class="btn btn-danger w-100">Xác nhận</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 